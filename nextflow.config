process.container = 'lehtiolab/helaqc:2.2'


profiles {

  standard {
    includeConfig 'configuration/base.config'
  }
  qc {
    includeConfig 'configuration/base.config'
    process {
      executor = 'slurm'
      clusterOptions = '--qos=qc'
    }
    params {
      threadspercore = 2
    }
  }
  docker {
    docker.enabled = true
    docker.fixOwnership = true
    docker.runOptions = '-u $(id -u):$(id -g)'
  }
  test {
    includeConfig 'configuration/base.config'
    includeConfig 'configuration/test.config'
    executor {
      cpus = 20
    }
  }
}
